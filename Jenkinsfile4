pipeline {
    agent {
        kubernetes {
            label "kubeagent"
            cloud "kubernetes"
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  namespace: devops-tools
  labels:
    job: pipeline-build-pod
spec:
  containers:
  - name: pipeline-container
    image: alpine:latest
    tty: true
    command: ['cat']
'''
        }
    }
    stages {
        stage("First") {
            steps {
                container("pipeline-container") {
                    sh "echo Welcome to jenkins k8s pipeline"
                }
            }
        }
    }
}
