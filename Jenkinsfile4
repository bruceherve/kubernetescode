pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            app: jenkins
        spec:
          containers:
          - name: docker
            image: docker:dind
            volumeMounts:
            - name: dockersock
              mountPath: "/var/run/docker.sock"
          volumes:
          - name: dockersock
            hostPath: 
              path: "/var/run/docker.socker"
        '''
    }
  }
  stages {
    stage('Check Docker Vesrion') {
      steps {
        container('docker') {
          sh 'docker version'
        }
      }
    }
  }
}

 
