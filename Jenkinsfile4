
      pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            app: jenkins
        spec:
          containers:
          - name: docker
            image: docker:dind
            volumeMounts:
            - name: dockersock
              mountPath: "/var/run/docker.sock"
          volumes:
          - name: dockersock
            hostPath: 
              path: "/var/run/docker.socker"
        '''
    }
  }
  stages {
    stage('Prepare'){
        checkout scm
    }
    stage('Check Docker Vesrion') {
        container('docker') {
          sh 'docker version'
        }
    }
  }
}
