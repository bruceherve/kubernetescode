podTemplate(containers: [
    containerTemplate(
        name: 'docker', 
        image: 'docker:dind'
        )],
        volumes: [
              hostPathVolume(hostPath: '/var/run/docker.sock', mountPath: '/var/run/docker.sock')
        ]) {
            node('POD_LABEL'){
                stage('Prepare'){
                    checkout scm
                }
                stage('Check Docker Version'){
                    container('docker'){
                        sh "docker version"
                    }
                }
            }
        }
